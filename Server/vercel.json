{
  "version": 2,
  "builds": [
    {
      "src": "./index.js",
      "use": "@vercel/node"
    },
    {
      "src": "./api/cron.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "*/5 * * * *"  
    },
    {
      "path": "/format/bulk/update/phone_number",
      "schedule": "*/1 * * * *"  
    },
    {
      "path": "/format/bulk/update/check_phone_number",
      "schedule": "*/2 * * * *"  
    },
    {
      "path": "/format/remove/cache/all",
      "schedule": "*/3 * * * *"  
    }
  ]
}
