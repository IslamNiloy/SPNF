{
  "version": 2,
  "builds": [
    {
      "src": "./index.js",
      "use": "@vercel/node"
    },
    {
      "src": "./api/cron.js",
      "use": "@vercel/node"
    },
    {
      "src": "./api/phone_number.js",
      "use": "@vercel/node"
    },
    {
      "src": "./api/check_phone_number.js",
      "use": "@vercel/node"
    },
    {
      "src": "./api/remove_cache.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "*/6 * * * *"  
    },
    {
      "path": "/api/phone_number",
      "schedule": "*/2 * * * *"  
    },
    {
      "path": "/api/check_phone_number",
      "schedule": "*/4 * * * *"  
    }
  ]
}
